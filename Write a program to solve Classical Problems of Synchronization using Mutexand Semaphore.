import threading, time, random
mutex = threading.Semaphore(1)
full = threading.Semaphore(0)
empty = threading.Semaphore(3)
buffer = []

def producer():
    for i in range(5):
        item = random.randint(1,100)
        empty.acquire()
        mutex.acquire()
        buffer.append(item)
        print("Produced", item)
        mutex.release()
        full.release()
        time.sleep(1)

def consumer():
    for i in range(5):
        full.acquire()
        mutex.acquire()
        item = buffer.pop(0)
        print("Consumed", item)
        mutex.release()
        empty.release()
        time.sleep(2)

t1 = threading.Thread(target=producer)
t2 = threading.Thread(target=consumer)
t1.start()
t2.start()
t1.join()
t2.join()
